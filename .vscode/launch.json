  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Launch Program",
      "type": "node",
      "program": "${workspaceFolder}/mod.ts",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-wait",
        "--allow-all"
      ],
      "args": [
        "--path=dav",
        "--no-dialog",
        "--debug",
        "--meta-touch"
      ],
      "attachSimplePort": 9229
      // "console": "integratedTerminal"
    }
  ]
}
